---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/baselayout.astro';

const notes = (await getCollection('notes')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = "Notes";
---

<BaseLayout pageTitle={pageTitle}>
  <p>Short-form learning, reading notes, and curation.</p>
  <ul class="post-list">
    {notes.map((note) => (
      <li>
        <span class="date">{note.data.pubDate.toISOString().slice(0, 10)}</span>
        <a href={`/notes/${note.slug}/`}>{note.data.title}</a>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  .post-list {
    list-style: none;
    padding: 0;
    margin-top: 2rem;
  }
  .post-list li {
    display: flex;
    flex-direction: column;
    margin-bottom: 1rem;
  }
  .post-list .date {
    font-size: 0.875rem;
    color: var(--color-muted);
    margin-bottom: 0.25rem;
  }
  @media (min-width: 640px) {
    .post-list li {
      flex-direction: row;
      align-items: baseline;
    }
    .post-list .date {
      width: 120px;
      flex-shrink: 0;
      margin-bottom: 0;
    }
  }
</style>